<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Subtle gradient for AI messages -->
    <gradient
        android:angle="135"
        android:startColor="#2D2D3A"
        android:endColor="#3D3D4A"
        android:type="linear" />
    
    <!-- Rounded corners - more on top-right for chat bubble effect -->
    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="6dp"
        android:bottomRightRadius="20dp" />
    
    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#4D4D5A" />
    
</shape>
